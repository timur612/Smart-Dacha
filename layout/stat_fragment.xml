android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity" android:id="@+id/content"
android:background="@color/backLightGray">

    <TextView
            android:text="Влажность  почвы"
            android:layout_width="254dp"
            android:layout_height="47dp"
            android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="276dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="25sp"
            app:layout_constraintHorizontal_bias="0.034" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/plot2"/>
    <com.jjoe64.graphview.GraphView
            android:id="@+id/plot"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.133"/>
    <com.jjoe64.graphview.GraphView
            android:id="@+id/plot2"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.659"/>
<com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="44dp" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/drawer_view" android:id="@+id/navigationView"/>
    <TextView
            android:text="Температура"
            android:layout_width="162dp"
            android:layout_height="47dp"
            android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
